<%= stylesheet_link_tag "showChore" %>

<p>
  <b>Title:</b>
  <%=h @chore.title %>
</p>

<p>
  <b>Description:</b>
  <%=h @chore.description %>
</p>

<p>
	<b>People:</b>
	<ul>
		<% @chore.users.each do |user| %>
			<li><%= user.name %></li>
		<% end %>
	</ul>
</p>	

<p>
  <b>Deadline:</b>
  <%=h @chore.deadline %>
</p>

<p>
  <b>Is recurring:</b>
  <%=h @chore.is_recurring %>
</p>

<p>
  <b>Is rotating:</b>
  <%=h @chore.is_rotating %>
</p>

<div class="rightMost">
<%= button_to 'Remind', '#', :method => "get", :class => 'button3' %>
<% if not @chore.is_done %>
	<%= button_to 'Check Off', {:controller => "chores", :action => "checkoff", :id => @chore.id, :method => :post}, :confirm => 'Are you finished with this chore?', :class => 'button2' %>
<% end %>
<%= button_to 'Delete', @chore, :confirm => 'Are you sure you want to delete this chore?', :method => :delete, :class => 'button1' %>
<%= button_to 'Edit', edit_chore_path(@chore), :method => "get", :class => 'button0' %>

</div>