<h1>New chore</h1>

<% form_for(@chore) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :deadline %><br />
    <%= f.datetime_select :deadline, :start_year => Time.now.year %>
  </p>
  <p>
    <%= f.label :Recurring %>
    <%= f.check_box :is_recurring %>
  </p>
  <p>
    <%= f.label :Rotating %>
    <%= f.check_box :is_rotating %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', chores_path %>